{% extends 'layout.html.twig' %}
{% block title %}Projets form{% endblock %}
{% block main_content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-archive"></i>&nbsp;Edition d'un projet</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{path("main")}}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{path('projet')}}">Projets</a>
                </li>
                <li class="breadcrumb-item">Edition d'un projet</li>
            </ul>
        </div>
        <div class="tile">
            {#            <div class="alert alert-dismissible alert-success my-4">#}
            {#                <button class="close" type="button" data-dismiss="alert">Ã—</button><strong>Well done!</strong> Message flash.#}
            {#            </div>#}
            {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
            <section>
                <h3>Projet</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_errors(form.nom) }}
                            {{ form_label(form.nom) }}
                            <div class="col-md-9">
                                {{ form_widget(form.nom,{
                                    'attr':{
                                        'class':'form_control',
                                        'placeholder':form.nom.vars.label}})
                                }}
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.description) }}
                            {{ form_label(form.description) }}
                            <div class="col-md-9">
                                {{ form_widget(form.description,{
                                    'attr':{
                                        'class':'form_control',
                                        'placeholder':form.description.vars.label}})
                                }}
                            </div>
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.prix) }}
                            {{ form_label(form.prix) }}
                            <div class="col-md-9">
                                {{ form_widget(form.prix,{
                                    'attr':{
                                        'class':'form_control',
                                        'placeholder':form.prix.vars.label}})
                                }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </main>
{% endblock %}