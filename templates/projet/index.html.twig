{% extends 'layout.html.twig' %}

{% block title %}Projet{% endblock %}

{% block main_content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-archive"></i>&nbsp;Projets</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{path("main")}}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Projets</li>
            </ul>
        </div>
        <div class="tile pb-5">
            <a href="{{ path('projet_form') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un projet</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Date d'initialization</th>
                        <th>action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for projet in projets %}
                        <tr>
                            <td>{{projet.nom}}</td>
                            <td>{{projet.description}}</td>
                            <td>{{projet.prix}}</td>
                            <td>{{projet.createdAt|date('D F Y')}}</td>
                            <td>
                                <a href="{{ path('projet_form',{id:projet.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                                <a href="{{ path('projet_detail',{id:projet.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                                {% if projet.dateLivraison==null %}
                                    <a href="{{ path('projet_livre',{id:projet.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fa fa-check-square mr-0"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a></li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </main>
{% endblock %}