{% extends 'layout.html.twig' %}
{% block title %}Detail de l'employé{% endblock %}
{% block main_content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;projet: {{projet.nom}}</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{path('main')}}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{path('projet')}}">Projets</a>
                </li>
                <li class="breadcrumb-item">Projet:{{projet.nom}}</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>Nom</td>
                            <td>{{ projet.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</td>
                            <td>{{projet.description}}</td>
                        </tr>
                        <tr>
                            <th>Prix</td>
                            <td>{{projet.prix}}</td>
                        </tr>
                        <tr>
                            <th>Date d'initialization</td>
                            <td>{{ projet.createdAt | date('D F Y') }}</td>
                        </tr>
                        <tr>
                            <th>Coût total</td>
                            <td>{{ projettotal }}</td>
                        </tr>
                        <tr>
                            <th>Employeurs en travaillant</td>
                            <td>{{ projetusers }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('projet_form',{id:projet.id}) }}" class="btn btn-info">
                        <i class="fa fa-pencil"></i>Modifier
                    </a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tile pb-5">
                    <h3 class="tile-title">Historique des temps de production</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                            <tr>
                                <th>Nom du employé</th>
                                <th>Temps</th>
                                <th>Coût total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for projetdet in projetsdet %}
                                <tr>
                                    <td>{{ projetdet.user.prenom }} {{ projetdet.user.nom|upper }}</td>
                                    <td>{{ projetdet.tempsInd }}</td>
                                    <td>{{projetdet.tempsInd * projetdet.coutInd}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <hr/>
                    <nav class="float-right">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">1<span class="sr-only">(current)</span></span>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a></li>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </main>
{% endblock %}