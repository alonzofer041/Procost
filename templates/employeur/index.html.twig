{% extends 'layout.html.twig' %}

{% block title %}Employeurs{% endblock %}

{% block main_content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-user"></i>&nbsp;Employeurs</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{path("main")}}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Employeurs</li>
            </ul>
        </div>
        <div class="tile pb-5">
            <a href="{{ path('employeur_form') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employeur</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Métier</th>
                        <th>Coût horaire</th>
                        <th>Date d'embauche</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{user.prenom}} {{ user.nom|upper }}</td>
                            <td>{{user.email}}</td>
                            <td>{{user.metier.nom}}</td>
                            <td>{{user.coutHoraire}} €</td>
                            <td>{{user.dateEmbauche | date("F Y")}}</td>
                            <td>
                                <a href="{{ path('employeur_detail',{id:user.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                                <a href="{{ path('employeur_form',{id:user.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a></li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </main>
{% endblock %}